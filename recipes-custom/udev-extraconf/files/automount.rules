# There are a number of modifiers that are allowed to be used in some
# of the different fields. They provide the following subsitutions:
#
# %n the "kernel number" of the device.
#    For example, 'sda3' has a "kernel number" of '3'
# %e the smallest number for that name which does not matches an existing node
# %k the kernel name for the device
# %M the kernel major number for the device
# %m the kernel minor number for the device
# %b the bus id for the device
# %c the string returned by the PROGRAM
# %s{filename} the content of a sysfs attribute
# %% the '%' char itself
#

KERNEL!="sd[a-z][0-9]", GOTO="media_auto_mount_end"

# Import FS infos  
IMPORT{program}="/sbin/blkid -o udev -p %N"

ENV{ID_FS_LABEL}!="", ENV{dir_name}="%E{ID_FS_LABEL}"
ENV{ID_FS_LABEL}=="", ENV{dir_name}="%E{ID_VENDOR}"
ENV{ID_BUS}=="ata", ENV{dir_name}="HDD"
ENV{ID_PATH}=="platform-f0470300.ehci-usb-0:1.3:1.0-scsi-0:0:0:0", ENV{dir_name}="USB"

# Global mount options  
SUBSYSTEM=="block", ACTION=="add", ENV{mount_options}="silent"
# Filesystem-specific mount options  
SUBSYSTEM=="block", ACTION=="add", ENV{ID_FS_TYPE}=="vfat", ENV{mount_options}="$env{mount_options},utf8,gid=6,umask=007"
# Mount the device  
SUBSYSTEM=="block", ACTION=="add", RUN+="/bin/mkdir -p /media/%E{dir_name}", RUN+="/bin/mount -o $env{mount_options} /dev/%k /media/%E{dir_name}", RUN+="/usr/bin/usb.sh", RUN+="/usr/bin/mdev_helper"
# Clean up after removal  
SUBSYSTEM=="block", ACTION=="remove", ENV{dir_name}!="", RUN+="/bin/umount -l /media/%E{dir_name}", RUN+="/bin/rmdir /media/%E{dir_name}", RUN+="/usr/bin/usb.sh"

# Exit  
SUBSYSTEM=="block", LABEL="media_auto_mount_end"
